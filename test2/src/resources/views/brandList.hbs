<div class="container">
    <div align="center" class="mt-2">
        <a href="/brand/create" class="btn btn-primary">Create</a>
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#each brand}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>
                    <a href="/product/{{this.id}}" class="btn btn-info">Detail</a>
                    <a href="/brand/edit/{{this.id}}" class="btn btn-warning">Update</a>
                    <button type="button" class="btn btn-danger"
                            onclick="deleteProduct('{{this.id}}','{{this.name}}')"
                            data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteProductForm" method="get">
                <div class="modal-body">

                    <p> You confirm the removal of product <span style="color: red" id="productName"></span> ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function deleteProduct(id, name) {
        document.getElementById('productName').innerText = name
        let deleteProductForm = document.getElementById('deleteProductForm')
        deleteProductForm.action = '/brand/delete/' + id + '?_method=DELETE'
    }
</script>