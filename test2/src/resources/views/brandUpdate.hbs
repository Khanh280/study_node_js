<div class="row">
    <div class="col-md-4"></div>
    <form class="col-md-4" action="/brand/update/{{brand.id}}?_method=PUT" method="post">
        <div align="center">
            <h2>Update Brand</h2>
        </div>
        <div class="form-group my-2">
            <label for="name">Name Brand</label>
            <input type="text" class="form-control" id="name" value="{{brand.name}}" name="name">
        </div>
        <button class="btn btn-primary">Update</button>
    </form>
    <div class="col-md-4"></div>
</div>
